<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Potencias Fraccionales de Dos</title>
  <style>
    table {
      border-collapse: collapse;
      width: 50%;
      margin: 20px;
    }

    th, td {
      border: 1px solid #dddddd;
      text-align: center;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>

<script>
  document.write('<table>');
  document.write('<tr><th>N</th><th>Potencia Fraccional</th><th>Decimal</th></tr>');

  for (let i = 1; i <= 10; i++) {
    let potenciaFraccional = 1 / Math.pow(2, i);
    let decimal = potenciaFraccional.toFixed(6); // Redondear a 6 decimales

    document.write('<tr>');
    document.write('<td>' + i + '</td>');
    document.write('<td>1/2^' + i + '</td>');
    document.write('<td>' + decimal + '</td>');
    document.write('</tr>');
  }

  document.write('</table>');
</script>

</body>
</html>
